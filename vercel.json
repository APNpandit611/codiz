{
  "buildCommand": "prisma generate && next build",
  "installCommand": "npm install && prisma generate",
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "true",
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
