generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String   @id
  email     String   @unique
  name      String
  image     String?
  quizzes   Quiz[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Quiz {
  id                 Int      @id @default(autoincrement())
  question           String
  codeSnippet        String
  difficulty         String
  language           String
  choices            String[]
  correctAnswerIndex Int
  explanation        String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  userId             String
  user               User     @relation(fields: [userId], references: [id])
}
